<h3>EDIT COURSES</h3>
<form method="POST" action="/course/{{course._id}}?_method=PUT">
  <div class="form-group">
    <label for="name">Name</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      placeholder="Name of video"
      value="{{course.name}}"
    />
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input
      type="text"
      class="form-control"
      id="description"
      name="description"
      placeholder="Description of video"
      value="{{course.description}}"
    />
  </div>
  <div class="form-group">
    <label for="videoId">VideoId</label>
    <input
      type="text"
      class="form-control"
      id="videoId"
      name="videoId"
      placeholder="VideoId of video"
      value="{{course.videoId}}"
    />
  </div>
  <button type="submit" class="btn btn-primary">SAVE</button>
</form>